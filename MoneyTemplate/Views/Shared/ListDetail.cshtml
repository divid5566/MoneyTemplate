@model List<MoneyTemplate.Models.note>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>備註</th>
            </tr>
            @{
                var a = 0;
                foreach (var item in Model)
                {
                    a++;
                    
                    <tr>
                        <th>@a</th>
                        @if (@item.category == 0)
                        {
                            <th>支出</th>
                        }
                        else
                        {
                            <th>收入</th>
                        }
                        <th>@item.noteday</th>
                        <th>@item.noteprice</th>
                        <th>@item.description</th>
                    </tr>
                }
            }
        </table>
    </div>
</div>
